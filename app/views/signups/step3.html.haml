.telephone-single-container
  .s-header
    .l-header
      %h1
      .nav-contents
        .nav-content.red
          %p情報入力
          .nav-line
            .circle.red
        .nav-content.red
          %p住所入力
          .nav-line
            .circle.red
        .nav-content.red
          %p電話番号
          .nav-line
            .circle.last
        .nav-content
          %p入力完了
          .nav-line
            .round
  .Telephone-information
    .telephone-l-single
      %h2電話番号の確認
      .telephone-form
        =form_with model: @user, url: signups_path, local: true do |form|
          .l-single-container
            %label電話番号
            %span必須
            - if @user.errors.full_messages_for(:phonenumber)
              = form.text_field :phonenumber, class: "number-form", placeholder: "携帯電話の番号を入力"
            - else 
              = form.text_field :phonenumber, class: "number-form", placeholder: "携帯電話の番号を入力"
            =  render partial: 'error-messages', locals: { user: @user, column: "phonenumber"}

            %p本人確認のため、携帯電話のSMS(ショートメッセージサービス)を利用して認証を行います。
            .form-register
            = form.submit "登録する", class: "telephone-btn"

  = render partial: "shared/shared_1/footer"


